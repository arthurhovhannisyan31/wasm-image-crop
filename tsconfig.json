{
  "extends": "./configs/typescript/tsconfig.rules.json",
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": "web",
    "rootDir": ".",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "web",
    "**/*.ts",
    "**/*.tsx",
    "**/.*.js",
    // needed for config files with leading dot
    "**/*.js",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "pkg"
  ],
  "types": [
    "webpack-env",
    "node"
  ]
}
